{
  "name": "eve3duniverse",
  "version": "0.1.0",
  "type": "module",
  "description": "EVE Online 3D Universe Map Explorer",
  "main": "dist-electron/main.js",
  "author": "EC Trade <contact@edencom.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ectkirk/eve3duniverse"
  },
  "scripts": {
    "dev": "npm run build:preload && vite",
    "build": "vite build && npm run build:preload",
    "build:preload": "npx esbuild electron/preload.ts --bundle --platform=node --target=node18 --external:electron --format=cjs --outfile=dist-electron/preload.cjs",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "net.edencom.eve3duniverse",
    "productName": "EVE 3D Universe",
    "copyright": "Copyright Â© 2026 EC Trade (edencom.net)",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "legalTrademarks": "EC Trade - edencom.net",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "EVE3DUniverse-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "EVE3DUniverse-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "ectkirk",
      "repo": "eve3duniverse"
    }
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "dotenv": "^17.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "three": "^0.182.0",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "^25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "5.1.2",
    "electron": "39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vite-plugin-electron": "0.29.0",
    "vite-plugin-electron-renderer": "0.14.6",
    "vitest": "^4.0.16"
  }
}
